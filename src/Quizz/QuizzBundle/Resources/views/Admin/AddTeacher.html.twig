{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="{{ path('admin_home') }}">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Ajout de professeur
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Quick View Bare -->
    <div class="row">

        <div class="col-lg-6">
            <form>
                <div class="form-group">
                    <label for="_studentName">Nom du professeur</label>
                    <input type="text" class="form-control" id="_studentName" placeholder="Nom du professeur">
                </div>
                <div class="form-group">
                    <label for="_studentLastname">Prénom du professeur</label>
                    <input type="text" class="form-control" id="_studentLastname" placeholder="Prénom du professeur">
                </div>
                <div class="form-group">
                    <label for="_studentEmail">Adresse Email du professeur</label>
                    <input type="text" class="form-control" id="_studentEmail" placeholder="Adresse Email du professeur">
                </div>

                <button type="submit" class="btn btn-default">Ajout</button>
            </form>
        </div>

    </div>
    <!-- /.row -->

{% endblock %}