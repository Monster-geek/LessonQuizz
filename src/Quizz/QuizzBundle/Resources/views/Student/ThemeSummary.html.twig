{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="#">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Vue globale des Th√®mes
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Quick View Bare -->
    <div class="row">

        {% for theme in themes %}
            <div class="col-lg-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">{{ theme.name }}</div>
                    <div class="panel-body">{{ theme.description }}</div>
                </div>
            </div>
        {% endfor %}

    </div>
    <!-- /.row -->

{% endblock %}