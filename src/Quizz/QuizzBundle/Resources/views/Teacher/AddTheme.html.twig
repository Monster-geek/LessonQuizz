{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="{{ path('teacher_home') }}">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Ajout d'un Thème
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">

        <div class="col-lg-3">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <label>Nom du thème</label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
            <br />
            <label>Description</label>
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
            <br />
            <label>Cochez les classe ayant accés à ce thème :</label>
            {{ form_errors(form.groups) }}
            {{ form_widget(form.groups) }}
            <br />
            {{ form_widget(form.Ajout) }}
            {{ form_end(form) }}
        </div>

    </div>
    <!-- /.row -->

{% endblock %}