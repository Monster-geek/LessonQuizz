{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="#">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Dashboard
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Quick View Bare -->
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-university fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ nbclassroom }}</div>
                            <div>Classes</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('teacher_addclassroom') }}">
                    <div class="panel-footer">
                        <span class="pull-left">Voir Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-users fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ nbstudent }}</div>
                            <div>Etudiants.</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('teacher_addstudent') }}">
                    <div class="panel-footer">
                        <span class="pull-left">Voir Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-graduation-cap fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ nbtheme }}</div>
                            <div>Th√®mes.</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('teacher_addtheme') }}">
                    <div class="panel-footer">
                        <span class="pull-left">Voir Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->

{% endblock %}