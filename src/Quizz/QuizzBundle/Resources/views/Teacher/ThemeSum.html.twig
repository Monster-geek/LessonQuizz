{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="#">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Sommaire des quizz
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Structure explanation : 3 blocs per line, class="col-lg-4". 1 bloc = 1 quizz  -->

    <!-- -->
    <div class="row">

        {% for theme in themes %}
            <div class="col-lg-4">
                <div class="list-group">
                    <a href="{{ theme.levelLink }}" class="list-group-item">
                        <h4 class="list-group-item-heading">{{ theme.name }}</h4>
                        <p class="list-group-item-text">{{ theme.description }}</p>
                    </a>
                </div>
            </div>
        {% endfor %}

    </div>
    <!-- /.row -->

{% endblock %}