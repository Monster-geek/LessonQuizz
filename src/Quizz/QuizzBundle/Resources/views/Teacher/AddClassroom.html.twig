{% extends ':Front:tpl_home.html.twig' %}

{% block NavBar %}
    {% include 'QuizzQuizzBundle:Front:NavBar.html.twig' %}
{% endblock %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ user.name }}
                <small>{{ user.lastname }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="{{ path('teacher_home') }}">Acceuil</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Ajout d'une classe
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Quick View Bare -->
    <div class="row">

        <div class="col-lg-3">
            <label>Libéllé de la classe.</label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
            <br/>
            {{ form_widget(form.Ajout) }}
        </div>


        <div class="col-lg-2">
            <table class="table">
                <caption> Recaptulatif des classes .</caption>
                <thead>
                    <tr>
                        <th>Libélé</th>
                    </tr>
                </thead>
                <tbody>
                {% for class in debug %}
                    <tr>
                        <td>{{ class }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if add_box == true %}
        {% endif %}
    </div>
    <!-- /.row -->

{% endblock %}